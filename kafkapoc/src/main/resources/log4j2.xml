<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true"
	packages="com.paytm.poc.kafka">


	<Appenders>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}:%L - %msg%n%n" />
		</Console>

	</Appenders>

	<Loggers>


		<Logger name="org.springframework" level="DEBUG"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>


		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>

	</Loggers>

</Configuration>
